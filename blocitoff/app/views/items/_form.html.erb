<%= form_for [user, user.items.new], remote:true do |f|%>
<% errors = user.items.new.errors %>
  <% if errors.any? %>
    <div class="alert alert-danger">
      <h4> There are <%= pluralize(errors.count, "error") %></h4>
      <ul>
        <% errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <%end%>
  <%= f.label "new item" %>
  <%= f.text_area :name, rows: 8, class: 'form-control', placeholder:"Enter item name" %>
  
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success'%>
  </div>
<% end %>